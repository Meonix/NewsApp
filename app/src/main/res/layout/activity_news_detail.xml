<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.popular.NewsDetail">
    <include
        android:id="@+id/detailToolbar"
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/motionLayoutDetail"
        android:layout_below="@id/detailToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/activity_news_detail_scene">
        <WebView
            android:id="@+id/webViewDetail"
            android:layout_below="@id/detailToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvDetail"
            android:elevation="@dimen/elevation_1"
            app:cardCornerRadius="@dimen/margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_or_height_20dp">
            <TextView
                android:id="@+id/tvComment"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_gravity="center_vertical"
                android:text="@string/comment"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:elevation="@dimen/elevation_2"
            android:id="@+id/ivOpen"
            android:src="@drawable/ic_expand_24"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"/>
        <ImageView
            android:elevation="@dimen/elevation_2"
            android:id="@+id/ivHide"
            android:src="@drawable/ic_more_24"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"/>
        <RelativeLayout
            android:id="@+id/rlDetail"
            android:translationZ="@dimen/elevation_2"
            android:elevation="@dimen/elevation_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_50"
                android:layout_width="match_parent"
                android:id="@+id/rvDetail"
                android:layout_above="@+id/llComment"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:padding="@dimen/padding_10dp"
                android:id="@+id/llComment"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:padding="@dimen/padding_5dp"
                    android:hint="@string/send_comment"
                    android:id="@+id/etComment"
                    android:layout_weight="8"
                    android:background="@drawable/border_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_50"/>
                <ImageView
                    android:layout_weight="2"
                    android:src="@drawable/ic_sent"
                    android:id="@+id/btComment"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_50"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.constraintlayout.motion.widget.MotionLayout>
</RelativeLayout>